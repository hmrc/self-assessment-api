@import uk.gov.hmrc.domain.SaUtr
@import uk.gov.hmrc.selfassessmentapi.controllers.api._
@import uk.gov.hmrc.selfassessmentapi.views.Helpers._

@(method: String, saUtr: SaUtr, taxYear: TaxYear, sourceType: SourceType, propertyType: YearPropertyType, sourceId: SourceId)

<section id="@(s"sample-request-${sourceType.name}-${propertyType.name}")">
  <title>@(propertyType.title) request</title>
  <resource>@method /self-assessment/@saUtr/@taxYear/@(sourceType.name)/@(sourceId)/@(propertyType.name)</resource>
  <description>@{propertyType.description(if(method=="POST") "Creates" else "Updates")}</description>
  <json>@prettyPrint(propertyType.example(None))</json>
        @if(propertyType.fieldDescriptions.nonEmpty) {
  <table>
  <headings>
    <cell>Name</cell>
    <cell>Type</cell>
    <cell>Description</cell>
  </headings>
  <rows>
    @propertyType.fieldDescriptions.map(fd => fieldDescriptionShort(fd))
  </rows>
  </table>
  }
</section>