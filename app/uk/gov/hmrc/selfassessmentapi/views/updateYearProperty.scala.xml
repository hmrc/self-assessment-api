@import uk.gov.hmrc.domain.SaUtr
@import uk.gov.hmrc.selfassessmentapi.controllers.api._
@import uk.gov.hmrc.selfassessmentapi.views.Helpers._

@(saUtr: SaUtr, taxYear: TaxYear, sourceType: SourceType, propertyType: YearPropertyType, sourceId: SourceId)

<endpoint>
    <name>Update @{propertyType.documentationName} for @{sourceType.documentationName}</name>
    <description>This endpoint updates a @{propertyType.documentationName} for @{sourceType.documentationName}</description>
    <section id="resource">
        <title>Resource</title>
        <resource><![CDATA[PUT /self-assessment/{utr}/{tax-year}/@{sourceType.name}/{@{sourceType.name}-id}/@{propertyType.name}]]></resource>
    </section>
    @partials.sourcePathParams(saUtr, taxYear, sourceType, None, Some(sourceId), None)
    @partials.requestHeaders(true)
    @partials.authorisation(true)
    @partials.propertyWriteRequest("PUT", saUtr, taxYear, sourceType, propertyType, sourceId)
    <section id="sample-response">
        <title>Sample Response</title>
        <httpStatus>200 (OK)</httpStatus>
        <json>@sourceTypeAndPropertyTypeResponse(saUtr, taxYear, sourceType, propertyType, sourceId, Some(propertyType.example(None)))</json>
    </section>
</endpoint>
